{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "./dist/",
        "module": "commonjs",
        "sourceMap": false,
        "declaration": false,
        "moduleResolution": "node",
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "allowJs": true,
        "target": "es5",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "lib": [
            "es2016",
            "dom"
        ]
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
