{
    "compilerOptions": {
        "outDir": "./dist",
        "sourceMap": false,
        "strict": true,
        "noImplicitReturns": true,
        "module": "es2015",
        "moduleResolution": "node",
        "removeComments": true,
        "target": "es5",

        "noImplicitAny": false,
        // 启用 vue-class-component 及 vuex-class 需要开启此选项
        "experimentalDecorators": true,

        "strictPropertyInitialization": false,
        // 启用 vuex-class 需要开启此选项
        "strictFunctionTypes": false
    },
    "include": [
        "./src/**/*"
    ]
}
